<body>
    <%- include('../main') %>
    <%- include("./../partials/header.ejs") %>


    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body text-center">
                        <div class="d-flex align-items-center justify-content-start mb-4">
                            <a href="{{request.META.HTTP_REFERER}}" class="btn btn-back">
                                <i class="fas fa-arrow-left"></i>
                            </a>
                            <h2 class="card-title mb-0 mx-auto">Importar Computadores</h2>
                        </div>
                        <form action="/importar-csv" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="empresa">Selecione a Empresa</label>
                                <select class="form-select" name="empresaId">
                                    <% empresas.forEach(function(empresa) { %>
                                    <option value="<%= empresa.id %>"><%= empresa.nome %></option>
                                    <% }); %>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="csvFile">Selecione o arquivo CSV</label>
                                <input type="file" class="form-control" name="csvFile" id="csvFile" required>
                            </div>
                            <hr>
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary">Importar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>